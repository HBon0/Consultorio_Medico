@model Consultorio_Medico.BL.DTOs.SpecialtiesDTO.SpecialtiesInputDTO

@{
    ViewData["Title"] = "Create";
}

<h3><center>Editar Specialidad</center></h3>
<hr />

<div class="container" style="padding: 50px 10px 10px 10px">
    <div class="">
        <div class="row d-flex justify-content-center align-items-center">

            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="number" name="Id" value=@Model.Id hidden />
                    </div>
                    <div class="form-group">
                        <label asp-for="Id" hidden></label>
                        <input asp-for="Id" hidden />
                    </div>
                    <div class="form-group">
                        <label asp-for="Specialty" class="control-label"></label>
                        <input asp-for="Specialty" class="form-control" />
                        <span asp-validation-for="Specialty" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">                      
                         <input type="submit" value="Editar" class="btn btn-primary" />||
                         <a asp-action="Index" class="btn btn-danger">Regresar a lista</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
