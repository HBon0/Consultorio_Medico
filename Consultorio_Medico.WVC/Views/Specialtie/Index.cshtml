@model Consultorio_Medico.BL.DTOs.SpecialtiesDTO.SpecialtiesInputDTO

@{
    ViewData["Title"] = "Index";
    List<Consultorio_Medico.BL.DTOs.SpecialtiesDTO.SpecialtiesOutputDTO> Specialties = ViewBag.Specialties as List<Consultorio_Medico.BL.DTOs.SpecialtiesDTO.SpecialtiesOutputDTO>;
}

<h2><center>Specialidad</center></h2>
<div>
    <p style="padding: 20px;">
        <a asp-action="Create" class="btn btn-info">Crear Specialtie</a>
    </p>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Specialtie
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Specialties)
            {
                <tr>
                    <td>
                        @item.Specialtie
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id  }, new {@class="btn btn-warning" }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id }, new {@class="btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id},new {@class="btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
