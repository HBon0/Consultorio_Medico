@model Consultorio_Medico.BL.DTOs.RolDTO.RolInputDTO

@{
    ViewData["Title"] = "Edit";
}

<h3><center>Editar Rol</center></h3>
<hr />
<div class="container" style="padding: 50px 10px 10px 10px">
    <div class="">
        <div class="row d-flex justify-content-center align-items-center">

            <div class="col-md-4">
                <form asp-action="Edit">
                    <div>
                        <input name="Id" value=@Model.RolId hidden/>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RolId" class="control-label" hidden></label>
                        <input asp-for="RolId" class="form-control" hidden/>
                        <span asp-validation-for="RolId" class="text-danger" hidden></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            @if(Model.Status == 1)
                            {
                                <option selected value="1">ACTIVO</option>
                                <option value="2">INACTIVO</option>
                            }
                            else if (Model.Status == 2)
                            {
                                <option selected value="2">INACTIVO</option>
                                <option value="1">ACTIVO</option>
                            }
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" /> ||
                        <a asp-action="Index" class="btn btn-danger">Regresar a lista</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
