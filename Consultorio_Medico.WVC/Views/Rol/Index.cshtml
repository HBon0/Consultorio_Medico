@model IEnumerable<Consultorio_Medico.BL.DTOs.RolDTO.RolSearchingOutputDTO>

@{
    ViewData["Title"] = "Index";
}

<h2><center>ROL</center></h2>
<div>
    <p style="padding: 20px">
        <a asp-action="Create" class="btn btn-info">Crear Nuevo</a>
    </p>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (item.Status == 1)
                    {
                        <td>ACTIVO</td>
                    }
                    else if (item.Status == 2)
                    {
                        <td>INACTIVO</td>
                    }
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.RolId  }, new {@class="btn btn-warning" }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.RolId }, new {@class="btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.RolId},new {@class="btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
