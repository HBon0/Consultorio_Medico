@model Consultorio_Medico.BL.DTOs.DTOs.CreateInputDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>


<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="OfficeName" class="control-label"></label>
            <input asp-for="OfficeName" class="form-control" />
            <span asp-validation-for="OfficeName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="OfficeAddres" class="control-label"></label>
            <input asp-for="OfficeAddres" class="form-control" />
            <span asp-validation-for="OfficeAddres" class="text-danger"></span>
        </div> 
        <div class="form-group col-md-6">
            <label asp-for="OfficeEmail" class="control-label"></label>
            <input asp-for="OfficeEmail" class="form-control" />
            <span asp-validation-for="OfficeEmail" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="OfficePhone" class="control-label"></label>
            <input asp-for="OfficePhone" class="form-control" />
            <span asp-validation-for="OfficePhone" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Regresar a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
