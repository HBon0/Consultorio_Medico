@model Consultorio_Medico.BL.DTOs.UserSchedule.userScheduleUpdateDTO
@{
}
@{

    ViewData["Title"] = "Create";
    var Horarios = ViewBag.Horarios;
    var Usuarios = ViewBag.Usuarios;
}

<h4><center>Editar Horarios Usuario</center></h4>
<hr />
<div class="container" style="padding: 50px 10px 10px 10px">
    <div class="">
        <div class="row d-flex justify-content-center align-items-center">

            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="">
                            <div class="">
                                <input asp-for="UserSchedulesId" hidden/>
                                <label class="control-label">Usuario</label>
                                <select asp-for="UserId" class="form-control">
                                    <option selecter>
                                        SELECCIONAR USUARIO
                                    </option>
                                    @foreach (var item in Usuarios)
                                    {
                                        <option value=@item.UserId>@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SchedulesId" class="control-label"></label>
                            <select asp-for="SchedulesId" class="form-control">
                                <option selecter>
                                    HORARIOS
                                </option>
                                @foreach (var item in Horarios)
                                {
                                    <option value=@item.SchedulesId>@item.DayName @item.StartOfShift @item.EndOfShift</option>

                                }
                            </select>
                            <span asp-validation-for="SchedulesId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input value=@Model.UserSchedulesId name="Id" type="number" hidden/>
                            <input type="submit" value="Editar" class="btn btn-primary" /> ||
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
