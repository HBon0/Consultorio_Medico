@model IEnumerable<Consultorio_Medico.BL.DTOs.PatientDTO.patientSearchOutputDTO>

@{
    ViewData["Title"] = "Index";
}
<h2><center>Pacientes</center></h2>
<div>
    <p style="padding: 20px;">
    <a asp-action="Create" class="btn btn-info">Crear Paciente</a>
</p>
</div>

<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DUI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>        
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DUI)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { Id=item.patientId  }, new {@class="btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new {  Id=item.patientId }, new {@class="btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { Id=item.patientId},new {@class="btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
